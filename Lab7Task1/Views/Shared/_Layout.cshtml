    @*----------------CSS-------------------------------------------*@
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/music.css")" rel="stylesheet" />
    @*----------------JavaScript------------------------------------*@
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.js")"
            type="text/javascript"></script>
